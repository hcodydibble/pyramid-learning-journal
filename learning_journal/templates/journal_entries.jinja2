{% extends "layout.jinja2" %}

{% block content %}
    {% for journal in journals %}
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-preview">
                <a href="{{ request.route_url('details', id=journal.id) }}">
                  <h2 class="post-title">
                    {{ journal.title }}
                  </h2>
                  <h3 class="post-subtitle">
                  </h3>
                </a>
                <p class="post-meta">Posted by
                  <a href="/about">H. Cody Dibble</a>
                  {{ journal.creation_date }}</p>
              </div>
              <hr>
              <!-- Pager -->
            </div>
          </div>
        </div>
    {% endfor %}
{% endblock %}
{% block create %}
      <div class="clearfix">
      <a class="btn btn-secondary float-right" href="{{ request.route_url('create') }}">Create New Post</a>
{% endblock %}